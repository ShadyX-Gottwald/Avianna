<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avianna.ReUseComponents.Controls.AppHeader.AppHeader">
    <Grid RowDefinitions="1*,Auto" HeightRequest="60" Padding="10" BackgroundColor="{StaticResource HomePeach}">

        <Label Grid.Row="0"  
               TextColor="White"
               FontSize="Large"
               FontAttributes="Bold"
               
                VerticalOptions="Center"
 HorizontalOptions="Start"
 Margin="20"
 
 HeightRequest="50"
 WidthRequest="200"
               > 
            
        </Label>

        <Button Grid.Row="1" Text="📍 Record Sighting"
 
  VerticalOptions="Center"
  HorizontalOptions="Center"
  Margin="20"
  CornerRadius="25"
  HeightRequest="50"
  WidthRequest="200"
  BackgroundColor="{StaticResource Primary}"
  TextColor="White"/>

    </Grid>
</ContentView>
