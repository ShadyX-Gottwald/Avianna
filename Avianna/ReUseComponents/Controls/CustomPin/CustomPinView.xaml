<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avianna.ReUseComponents.Controls.CustomPin.CustomPinView"
             xmlns:vm="clr-namespace:Avianna.presentation.ViewModels"
             >
    <VerticalStackLayout>
        <Label Text="{Binding Label}"
               FontSize="10"
               TextColor="White"
               BackgroundColor="#80000000"
               Padding="2"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,5"/>
    </VerticalStackLayout>
</ContentView>
